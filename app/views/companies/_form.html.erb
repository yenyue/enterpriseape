<div class="row">
  <%= form_for(@company) do |f| %>
    <% if @company.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

        <ul>
        <% @company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="control-group">
      <%= f.label :name, class: 'control-label' %><br>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :manager, class: 'control-label' %><br>
      <div class="controls">
        <%= f.text_field :manager %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :status, class: 'control-label' %><br>
      <div class="controls">
        <%= f.text_field :status %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :terms, class: 'control-label' %><br>
      <div class="controls">
        <%= f.number_field :terms %> 
<!--        <%= f.select(:terms, options_for_select([['0', 0], ['15', 15], ['30', 30], ['60', 60], ['90', 90]]), {include_blank: true}) %> 
-->
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.submit 'Submit', class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>
</div>
